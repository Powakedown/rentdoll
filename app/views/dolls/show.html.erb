<% provide(:title, @doll.name.capitalize) %>
<div class="content" >
  <div class="container-fluid"">
    <div class="card">
        <div class="row">
          <div class="col-xs-12 col-md-6 padding-0">
            <% if @doll.photo? %>
              <div class="card-image" style="background-image: url('<%= cl_image_path @doll.photo.path %>');">
            <% else %>
              <div class="card-image" style="background-image: url('http://res.cloudinary.com/doodlid/image/upload/e_blur:1337/v1502810434/doll8_msmtic.jpg')">
            <% end %>
            </div>
          </div>
          <div class="col-xs-12 col-md-6">
            <div class="card-content text-left">
              <h1><%= @doll.name%></h1>
              <p class="doll_description"><%= @doll.description%></p>
              <p>Location de 19H à midi. Nettoyer avant restitution.</p>
              <p class="text-right price"><%= @doll.price %> €</p>
              <%= render "bookings/form", doll: @doll, booking: @booking %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>


