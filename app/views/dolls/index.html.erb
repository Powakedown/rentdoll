          </div>
          <% end %>
          <div class="card-body text-center"><p><%= link_to doll.name, doll_path(doll) %> - <%= doll.price %> â‚¬</p>
          <p class="description"> <%= doll.description.byteslice(0..50) %>...</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


