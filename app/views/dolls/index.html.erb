<h1 class="text-center">Dolls</h1>


<div class="container">
  <div class="row">
    <% @dolls.each do |doll| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center" style="background-image: url('<%= image_path "doll#{doll.id}.jpg" %>')">
        </div>
        <p><%= doll.price %></p>
        <div class="card-body">
          <%= link_to doll.name, doll_path(doll) %>
        </div>
      </div>
    <% end %>
  </div>
</div>


