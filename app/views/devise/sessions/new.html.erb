<div class="container">
  <div class= "row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-offset-2 col-md-8">
      <div class="card-login">
            <%= render "devise/shared/links" %>
            <div class="text-center email-signup">
            <p>or login with your email</p>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= render "devise/shared/links_signup" %>
              <div class="form-actions">
              <%= f.button :submit, "Login", class:"btn-booking" %>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
